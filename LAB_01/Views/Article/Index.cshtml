@model List<LAB02_DLL.Models.Article>

<table>
    <tr>
        <th>
            ID
        </th>
        <th>
            Title
        </th>
        <th>
            Lead
        </th>
        <th>
            Content
        </th>
        <th>
            Creation Date
        </th>
        <th>
            Author
        </th>
        <th>
            Category
        </th>
        <th>
            Match
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var o in Model)
    {
        <tr>
            <td>
                @o.Id
            </td>
            <td>
                @o.Title
            </td>
            <td>
                @o.Lead
            </td>
            <td>
                @o.Content
            </td>
            <td>
                @o.CreationDate.ToShortDateString()
            </td>
            <td>
                @{
                    var substring = o.Author?.FirstName.Substring(0, 1) + ".";

                } @substring @o.Author?.LastName
            </td>
            <td>
                @o.Category?.Name
            </td>
            <td>
                @o.Match?.Id
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @o.Id })
                @Html.ActionLink("Delete", "Delete", new { @o.Id })
            </td>
        </tr>
    }
    <tr>
        <td colspan="9">
            @Html.ActionLink("Адеде", "Add")
        </td>
    </tr>
</table>

