@model List<LAB02_DLL.Models.Team>

<h2 class="text-center my-4">Team List</h2>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Country</th>
                <th>City</th>
                <th>Founding Date</th>
                <th>League</th>
                <th>Players Count</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (LAB02_DLL.Models.Team team in Model)
            {
                <tr>
                    <td>@team.Id</td>
                    <td>@team.Name</td>
                    <td>@team.Country</td>
                    <td>@team.City</td>
                    <td>@team.FoundingDate.ToString("yyyy-MM-dd")</td>
                    <td>@team.League?.Name</td>
                    <td>@team.Players?.Count</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { @team.Id })
                        @Html.ActionLink("Delete", "Delete", new { @team.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-center mt-4">
    <a role="button" class="btn btn-primary" asp-action="Add">Add New Team</a>
</div>